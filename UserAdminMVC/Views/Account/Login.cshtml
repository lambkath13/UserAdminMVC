@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mb-4">Login</h2>

@if (!string.IsNullOrEmpty(ViewBag.Msg)) {
    <div class="alert alert-warning">Your session is not valid or you are blocked.</div>
}

<form method="post" asp-action="Login" asp-controller="Account" class="mx-auto" style="max-width:420px">
    <div class="mb-3">
        <label class="form-label">E-mail</label>
        <input name="email" class="form-control" type="email" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" name="password" class="form-control" required />
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="rememberMe" id="rm" />
        <label class="form-check-label" for="rm">Remember me</label>
    </div>
    <button type="submit" class="btn btn-primary w-100 mb-2">Login</button>
</form>

<div class="text-center mt-3">
