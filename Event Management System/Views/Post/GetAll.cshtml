@model IEnumerable<Event_Management_System.Dto.Post.PostDto>
@{
    Layout = "_Layout";
}

<div class="text-center">
    <div class="layout-px-spacing">
        <div class="row layout-top-spacing">
            @foreach (var postDto in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mt-3 mb-3">
                    <div class="card component-card_2" style="border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: all 0.3s ease-in-out;">
                        <img src="/image/@postDto.ImageUrl" class="card-img-top" alt="Post Image" style="border-top-left-radius: 15px; border-top-right-radius: 15px; height: 200px; object-fit: cover;">
                        <div class="card-body" style="padding: 20px;">
                            <!-- Event Title -->
                            <a asp-action="GetById" asp-controller="Event" asp-route-id="@postDto.EventId">
                                <h5 class="card-title" style="font-weight: bold; font-size: 1.1rem; color: #1e4e8c; margin-bottom: 10px;">
                                    Event Title: @postDto.EventTitle
                                </h5>
                            </a>

                            <!-- Post Content -->
                            <p class="card-text" style="font-size: 0.95rem; color: #555; line-height: 1.5; margin-bottom: 10px;">
                                Post Content: @postDto.Content
                            </p>

                            <!-- Post Creation Date -->
                            <p class="card-text" style="font-size: 0.85rem; color: #888;">
                                <small>@postDto.CreatedAt.ToString("dd MMM yyyy, HH:mm")</small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>