@model Event_Management_System.Dto.User.GetUserDto
@{
    ViewData["Title"] = "Event Page";
}

<div class="text-center">
    <div class="layout-px-spacing">
        <div class="row layout-top-spacing">
            @foreach (var eventDto in Model.Entities)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mt-3 mb-3">
                    <div class="card component-card_2 h-100 d-flex flex-column">
                        <a asp-action="Me" asp-controller="User" asp-route-id="@eventDto.Id" class="d-flex justify-content-center mt-3">
                            @if (eventDto.AvatarUrl != null)
                            {
                                <img src="/image/@eventDto.AvatarUrl" class="rounded-circle shadow" width="150" height="150" alt="avatar">
                            }
                            else
                            {
                                <img src="~/assets/img/300x300.jpg" class="rounded-circle shadow" width="150" height="150" alt="default-avatar">
                            }
                        </a>

                        <div class="card-body d-flex flex-column justify-content-between text-start flex-grow-1">
                            <div>
                                <h5 class="card-title mb-3 fw-bold text-primary">
                                    <i class="fas fa-user-circle me-2"></i>@eventDto.Name
                                </h5>

                                <ul class="list-unstyled mb-3" style="line-height: 1.6;">
                                    <li>
                                        <span class="fw-semibold text-muted">üìß Email:</span>
                                        <span class="text-dark">@eventDto.Email</span>
                                    </li>
                                    <li>
                                        <span class="fw-semibold text-muted">üÜî Passport ID:</span>
                                        <span class="text-dark">@eventDto.PassportId</span>
                                    </li>
                                    <li>
                                        <span class="fw-semibold text-muted">üîê Role:</span>
                                        <span class="text-dark">@eventDto.Role</span>
                                    </li>
                                </ul>
                            </div>

                            <div class="d-flex justify-content-between mt-auto">
                                @if (eventDto.Id != Model.UserId && eventDto.IsFirstAdmin == false)
                                {
                                    <form asp-action="Delete" asp-controller="User" asp-route-id="@eventDto.Id"
                                          method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </button>
                                    </form>
                                }
                                @if (eventDto.IsFirstAdmin == false)
                                {
                                    <a asp-action="Edit" asp-controller="User" asp-route-id="@eventDto.Id"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i> Edit
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

        <!-- PAGINATION SECTION -->
        @if (Model.TotalCount > 12)
        {
            <div class="paginating-container pagination-default mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="GetAll"
                               asp-route-pageNumber="@(Model.PageNumber - 1)">Prev</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="GetAll" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="GetAll"
                               asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
