@model List<Event_Management_System.DTO.EventDto>
@{
    ViewData["Title"] = "Event Page";
}

<div class="text-center">
    <div class="layout-px-spacing">
        <div class="row layout-top-spacing">
            @foreach (var eventDto in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mt-3 mb-3">
                    <div class="card component-card_2">
                        <img src="~/assets/img/400x300.jpg" class="card-img-top" alt="widget-card-2">
                        <div class="card-body">
                            <h5 class="card-title"><a href="">@eventDto.Title</a></h5>
                            <p class="card-text">@eventDto.Description</p>
                            <div class="card-star_rating mb-2">
                                <span>Raiting</span>
                                <span class="badge badge-pills badge-success">4.5</span>
                            </div>
                            <a href="#" class="btn btn-primary">@eventDto.Status</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>